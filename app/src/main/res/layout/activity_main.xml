<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Team"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Team"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Team"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Current Teams:"
                android:id="@+id/textView"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team1"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team2"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team3"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team4"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team5"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team6"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team7"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team8"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team9"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team10"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team11"
                android:onClick="sendButtonID"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/team12"
                android:onClick="sendButtonID"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click on Team to show players -->"
        android:id="@+id/stats"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/scrollView2"
        android:layout_toStartOf="@+id/scrollView2" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/linearLayout2"
            android:layout_alignTop="@+id/button3"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player1" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player2" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player3" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player4" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player5" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player6" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player7" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player8" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player9" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player10" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player11" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player12" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player13" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player14" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/player15" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
